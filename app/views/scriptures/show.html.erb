<div>
  <%= link_to "Home", root_url %>
  <br>
  <%= "#{@scripture.book}:" %>
  <% @scripture.chapters_in_book_of_scripture.each do |l| %>
    <% unless @scripture.chapter == l %>
      <%= link_to_unless_current l, scripture_path(first_scripture_in_chapther(@scripture.book, l)) %>
    <% else %>
      <strong><%= l %></strong>
    <% end %>
  <% end %>
</div>
<%= render @scripture %>

<p>
  <% if @scripture.previous_chapters_end %>
    <%= link_to "Previous chapter", scripture_path(@scripture.previous_chapters_end)%>
  <% end %>
  <% if @scripture.next_chapters_start %>
    <%= link_to "Next chapter", scripture_path(@scripture.next_chapters_start)%>
  <% end %>
  <br>
  <% @scriptures.each do |s| %>
    <span>
      <%=s.verse%>
    </span>
    <%=s.word%>
    <br>
  <% end %>
  <% if @scripture.previous_chapters_end %>
    <%= link_to "Previous chapter", scripture_path(@scripture.previous_chapters_end)%>
  <% end %>
  <% if @scripture.next_chapters_start %>
    <%= link_to "Next chapter", scripture_path(@scripture.next_chapters_start)%>
  <% end %>
</p>